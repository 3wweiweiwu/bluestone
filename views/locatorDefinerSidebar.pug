extends ../node_modules/pug-bootstrap/_bootstrap.pug
include ./component/workflowTable.pug
include ./component/input.pug
include ./component/possibleLocatorTable.pug
block body
    script(src="/javascript/redirectInput.js")
    link(rel='stylesheet',href='/stylesheets/style.css')
    
    +nav-pills-justified([{text:"Default",href:"?default"},{text:"Back",href:"?next=-1"},{text:"Next",href:"?next=1"}],0)
    
    div(class='row')
        
        +input-arguments('locator-path',[{description:'Locator Name',pugType:"input",value:''}],'index')
    div(class='row')        
        
        +input-arguments('locator-text',[{description:'Locator Selector',pugType:"input",value:''}],'index')                    
    div(class='row')                
        +a-btn-primary('?btnValidate')='Check'
    
    h4="Possible Locators"
    +possible-locator-table([{name:"locator/Item/Name",pic:"1632792450295.png",selector:'.new-todo'}],possibleLocatorOkKey)
